<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Pantalla del partido en vivo con marcador, listas de jugadores y botÃ³n para finalizar el partido. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtHomeName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/local"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtHomeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_01"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/linea"
                android:textSize="24sp"
                android:layout_marginHorizontal="8dp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtAwayScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtAwayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/visitante"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFinishMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalizar_partido"
            android:layout_marginTop="12dp"
            android:textColor="?attr/colorOnPrimary"
            app:backgroundTint="?attr/colorPrimary"/>

        <TextView
            android:id="@+id/txtHomePlayersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/equipo_local"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerHomePlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

        <TextView
            android:id="@+id/txtAwayPlayersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/equipo_visitante"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"
            android:background="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAwayPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>

    </LinearLayout>
</ScrollView>
