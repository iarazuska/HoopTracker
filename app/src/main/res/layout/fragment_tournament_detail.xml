<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!-- Pantalla para ver y editar un torneo, gestionar sus partidos y aÃ±adir nuevos. -->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTournamentName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/nombre_del_torneo1"
        app:boxStrokeColor="?attr/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTournamentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTournamentStartDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/fecha_inicio_dd_mm_yyyy"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="?attr/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/inputTournamentName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTournamentStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTournamentEndDate"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/fecha_fin_opcional"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="?attr/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/inputTournamentStartDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTournamentEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:singleLine="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputTournamentDescription"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/descripci_n_del_torneo"
        android:layout_marginTop="12dp"
        app:boxStrokeColor="?attr/colorPrimary"
        app:boxStrokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/inputTournamentEndDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtTournamentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtMatchesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/partidos_del_torneo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/inputTournamentDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerTournamentMatches"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/txtMatchesTitle"
        app:layout_constraintBottom_toTopOf="@id/btnSaveTournament"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtEmptyMatches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/este_torneo_todav_a_no_tiene_partidos"
        android:gravity="center"
        android:textColor="?attr/colorOnSurface"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/recyclerTournamentMatches"
        app:layout_constraintBottom_toBottomOf="@id/recyclerTournamentMatches"
        app:layout_constraintStart_toStartOf="@id/recyclerTournamentMatches"
        app:layout_constraintEnd_toEndOf="@id/recyclerTournamentMatches" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveTournament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/guardar_cambios"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="16dp"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/recyclerTournamentMatches"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddMatchToTournament"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/a_adir_partido_al_torneo"
        android:textColor="?attr/colorOnPrimary"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:backgroundTint="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/btnSaveTournament"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
