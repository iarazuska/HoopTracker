<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:rippleColor="?attr/colorPrimaryVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jugador"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/pts_0"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtRebounds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/reb_0"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtAssists"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ast_0"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/txtSteals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rob_0"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtTurnovers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/per_0"
                android:textColor="?attr/colorOnSurface"/>

            <TextView
                android:id="@+id/txtFouls"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fal_0"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus1"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/_1"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus2"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/_2"
                    android:layout_marginHorizontal="4dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlus3"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/_3"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="6dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRebound"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/reb"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAssist"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="AST"
                    android:layout_marginHorizontal="4dp"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"
                    tools:ignore="HardcodedText" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSteal"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="@string/rob"
                    app:backgroundTint="?attr/colorPrimary"
                    android:textColor="?attr/colorOnPrimary"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTurnover"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/per"
                android:layout_marginTop="8dp"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFoul"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/falta"
                android:layout_marginTop="8dp"
                app:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
